package demo;

/* Author: EvoZims
 * Description: Java Program - Price Calculator
 * This program will be able to calculate how much an item will cost.
 * Date: 10/15/2017
 * 
 * Updates: 
 * Version: 1.0.0
 * 
 * Product: iPhone X - $1000
 * Tax: 9%
 * 
 * How much money would I have to pay, if I bought 5 iPhone Xs. 
 * 
 */

public class PriceCalculator {
	
	public static void main(String[] args) {
		
		int iPhone = 1000;
		double taxRate = 9;
		
		double taxRateInDecimal = taxRate / 100;
		double totalTax = taxRateInDecimal * iPhone; 
	
		double totalPrice = totalTax + iPhone;
		double totalPriceOfFiveIphones = totalPrice * 5;
		
		System.out.println(totalPriceOfFiveIphones);
		
	}
	
}
